@model D2_MVC_Task.Models.Course
 
@{
    Layout = "MyLayout";
}

<h2>Course Details</h2>

<div class="card p-3 shadow-sm mt-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>MaxDegree:</strong> @Model.Degree</p>
    <p><strong>MinDegree:</strong> @Model.MinDegree</p>
    <p><strong>Department:</strong> @Model.Department?.Name</p>
</div>

<a asp-controller="Course" asp-action="ShowAll" class="btn btn-secondary mt-3">Back to List</a>
<a asp-controller="Course" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-controller="Course" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">Delete</a>
