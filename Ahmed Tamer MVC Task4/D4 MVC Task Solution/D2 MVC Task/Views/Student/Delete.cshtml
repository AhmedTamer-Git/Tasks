@model Student

<h2> Delete Confirmation</h2>
<p>Are you sure you want to delete student <strong>@Model.Name</strong>?</p>

<form method="post" action="/Student/ConfirmDelete/@Model.Id">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/Student/ShowAll" class="btn btn-secondary">Cancel</a>
</form>
