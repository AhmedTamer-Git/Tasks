@model D2_MVC_Task.ViewModels.StudentEditVM

<h2>Edit Student</h2>

<form method="post" action="/Student/SaveEdit/@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" class="form-control form" />

    <div class="form-group">
        <label>Name:</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label>Age:</label>
        <input type="number" name="Age" class="form-control" value="@Model.Age" required />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select id="DepartmentId" name="DepartmentId" class="form-control form">
            @foreach (var item in Model.DeptList)
            {
                @if (item.Id == Model.DepartmentId)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>


<a href="/Student/ShowAll" class="btn btn-secondary mt-2">Cancel</a>
