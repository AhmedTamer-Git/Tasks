@model List<D2_MVC_Task.Models.Student>
@{
    Layout = "MyLayout";
}


<h2>All Students</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Department?.Name</td>
                <td>
                    <a asp-controller="Student" asp-action="ShowDetails" asp-route-id="@student.Id" class="btn btn-info">View</a>
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Student" asp-action="Add" class="btn btn-success">Add</a>
<a asp-controller="Student" asp-action="Search" class="btn btn-secondary">Search</a>
