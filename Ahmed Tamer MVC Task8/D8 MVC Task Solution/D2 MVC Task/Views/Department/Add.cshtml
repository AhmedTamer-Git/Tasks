@model Core.Models.Department
@{
    Layout = "MyLayout";
}

<h2>Add Department</h2>

<form asp-action="SaveAdd" asp-controller="Department" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MgrName"></label>
        <input asp-for="MgrName" class="form-control" />
        <span asp-validation-for="MgrName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

<a asp-action="ShowAll" class="btn btn-secondary mt-2">Cancel</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
