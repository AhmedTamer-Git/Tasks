@model Core.Models.Department

@{
    ViewData["Title"] = "ShowDetails";
}
@{
    Layout = "MyLayout";
}


<h2>Department Details</h2>

<p><strong>Id:</strong> @Model.Id</p>
<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Manager:</strong> @Model.MgrName</p>

<h3>Students in Department</h3>
@if (Model.Students != null && Model.Students.Any())
{
    <ul>
        @foreach (var student in Model.Students)
        {
            <li>@student.Name (@student.Age years)</li>
        }
    </ul>
}
else
{
    <p>No students in this department.</p>
}

<a asp-controller="Department" asp-action="ShowAll"  class="btn btn-secondary">Back to List</a>
